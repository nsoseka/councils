<h1>Search results</h1>
<div class="find-dc">
  <%= render 'search_form', { search_query: @search_query } %>
</div>
<ul class="children search-results">
  <% if @deaths.empty? && @deceaseds.empty? %>
    <h3>No results match your search</h3>
  <% else %>
    <% if @pagy.count >= @pagy2.count %>
      <%== pagy_nav(@pagy) %>
    <% else %>
      <%== pagy_nav(@pagy2) %>
    <% end %>
    <% @deaths.each do |death| %>
      <%= render "death", { death: death } %>
    <% end %>
    <% @deceaseds.each do |deceased| %>
      <%= render "deceaseds/deceased", { deceased: deceased } %>
    <% end %>
  <% end %>
</ul>

