<h1><%= t('.council_agents') %></h1>

<% current_agent.council.agents.each do |agent| %>
  <div class="agent">
    <div class="private-details">
      <p><%= t('.full_names') %>: <span><%= agent.full_names %></span></p>
      <p><%= t('.phone_number') %>: <span><%= agent.phone_number %></span></p>
      <p><%= t('.email') %>: <span><%= agent.email %></span></p>
    </div>
  </div>
<% end %>

  <h3 class="hospital-agents"><%= t('.hospital_agents') %></h3>
<% current_agent.council.hospitals.each do |agent| %>
  <div class="agent">
    <div class="private-details">
      <p><%= t('.full_names') %>: <span><%= agent.name %></span></p>
      <p><%= t('.phone_number') %>: <span><%= agent.phone_number %></span></p>
      <p><%= t('.email') %>: <span><%= agent.email %></span></p>
    </div>
  </div>
<% end %>
