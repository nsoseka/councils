    <input type="text" value="<%= @marriage.wife_job %>" disabled>
    <label><%= t('.nationality') %></label>
    <input type="text" value="<%= @marriage.wife_n %>" disabled>
    <label><%= t('.reference_document') %></label>
    <input type="text" value="<%= t('.' + @marriage.wife_rf) %>" disabled>
    <label><%= t('.residence') %></label>
    <input type="text" value="<%= @marriage.wife_res %>" disabled>
    <label><%= t('.wifes_father') %></label>
    <input type="text" value="<%= @marriage.wife_f %>" disabled>
    <label><%= t('.mother') %></label>
    <input type="text" value="<%= @marriage.wife_m %>" disabled>

    <p><%= t('.other_hand') %></p>

    <h3><%= t('.marriage_details') %></h3>

    <label><%= t('.regime') %></label>
    <input type="text" value="<%= t('.' + @marriage.marriage_ownership) %>" disabled>
    <label><%= t('.type') %></label>
    <input type="text" value="<%= t('.' + @marriage.marriage_type) %>" disabled>
    <label><%= t('.objections') %></label>
    <input type="text" value="<%= t('.' + @marriage.objections_raised + 'b') %>" disabled>
    <label><%= t('.mr') %></label>
    <input type="text" value="<%= @marriage.husband %>" disabled>
    <label><%= t('.miss') %></label>
