    <input type="text" value="<%= @marriage.registrar %>" disabled>
    <label><%= t('.secretary') %></label>
    <input type="text" value="<%= @marriage.secretary %>" disabled>
    <label><%= t('.at') %></label>
    <input type="text" value="<%= @marriage.drawn_at %>" disabled>
