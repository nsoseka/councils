<h1><%= t('.results') %></h1>
<div class="find-dc">
  <%= render 'search_form', { search_query: @search_query } %>
</div>
<ul class="children search-results">
  <% if @marriages.empty? %>
    <h3><%= t('.no_results') %></h3>
  <% else %>
    <%== pagy_nav(@pagy) %>
    <% @marriages.each do|marriage|%>
      <%= render "marriage", {marriage: marriage} %>
    <% end %>
  <% end %>
</ul>

