<%= form_tag search_deceaseds_path, remote: false, class: "search-form", method: "get" do |f| %>
  <input id="searcher" type="text" name="search_query" autofocus value="<%= search_query %>"><!--
  --><button type="submit"><%= fa_icon 'search' %></button>
  <h3><%= t('.search_by') %></h3>
  <p>
    <ul>
      <li><%= t('.deceaseds_name') %></li>
      <li><%= t('.mothers_name') %></li>
      <li><%= t('.fathers_name') %></li>
    </ul>
  </p>
<% end %>

<script>
  var element = document.getElementById('searcher');
  moveCursorToEnd(element)
</script>
