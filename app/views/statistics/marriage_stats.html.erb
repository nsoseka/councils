<header class="stat-page">
  <h1 class="stat-page">Marriage Statistics</h1>
  <nav class="stat-nav">
    <ul>
      <li class="<%= @chosen == 'week' ? 'stat-chosen' : '' %>">
        <%= link_to marriages_this_week_path do %>
          Week
        <% end %>
      </li>
      <li class="<%= @chosen == 'month' ? 'stat-chosen' : '' %>">
        <%= link_to marriages_this_month_path do %>
          Month
        <% end %>
      </li>
      <li class="<%= @chosen == 'year' ? 'stat-chosen' : '' %>">
        <%= link_to marriages_this_year_path do %>
          Year
        <% end %>
      </li>
    </ul>
  </nav>
</header>

<% if !@stats[:mean].nil? && @stats[:mean] > 0 %>
  <%= render 'charts', { data: @data, stats: @stats } %>
<% else %>
  <h3 class="nothing">No marriages registered so far this <%= @chosen %></h3>
<% end %>




