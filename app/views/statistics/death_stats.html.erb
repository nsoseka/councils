<header class="stat-page">
  <h1 class="stat-page"><%= t('statistics.death_stats') %></h1>
  <nav class="stat-nav">
    <ul>
      <li class="<%= @chosen == 'day' ? 'stat-chosen' : '' %>">
        <%= link_to deaths_this_day_path do %>
          <%= t('statistics.day') %>
        <% end %>
      </li>
      <li class="<%= @chosen == 'week' ? 'stat-chosen' : '' %>">
        <%= link_to deaths_this_week_path do %>
          <%= t('statistics.week') %>
        <% end %>
      </li>
      <li class="<%= @chosen == 'month' ? 'stat-chosen' : '' %>">
        <%= link_to deaths_this_month_path do %>
          <%= t('statistics.month') %>
        <% end %>
      </li>
      <li class="<%= @chosen == 'year' ? 'stat-chosen' : '' %>">
        <%= link_to deaths_this_year_path do %>
          <%= t('statistics.year') %>
        <% end %>
      </li>
    </ul>
  </nav>
</header>

<% if !@stats[:mean].nil? && @stats[:mean] > 0 %>
  <%= render 'charts', { data: @data, stats: @stats } %>
<% else %>
  <h3 class="nothing"><%= t('statistics.no_deaths') %> <%= @chosen %></h3>
<% end %>

