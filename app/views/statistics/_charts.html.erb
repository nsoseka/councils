<% if data.count > 1 %>
  <%= area_chart data %>
<% end %>
<%= column_chart data, download: true %>
<%= pie_chart data, donut: true, download: true, colors: ['#DD551A', '#AD7A99', '#00AA00', '#AFA737', '#FFA737', '#031219', '#225560', '#82204A', '#ECC8AE', '#00FF00', '#BB32FF', '#000000', '#DDFFD9', '#2A9D8F', '#ff9933', '#660066', '#e6b800', '#800000', '#1a0000', '#052A3A', '#151a21', '#3b99fc', '#E9C46A', '#DDD399', '#345432', '#999999', '#465748', '#DEDEDE', '#DAEE', '#8DD', '#43D', '#284989'] %>

<h2 class="stat-analysis"><%= t('statistics.stat_analysis') %></h2>
<table class="stats-descriptions">
  <thead>
    <th><%= t('statistics.property') %></th>
    <th><%= t('statistics.value') %></th>
  </thead>
  <tbody>
    <tr>
      <td><%= t('statistics.entries') %></td>
      <td><%= stats[:number] %></td>
    </tr>
    <tr>
      <td><%= t('statistics.sum_of_entries') %></td>
      <td><%= stats[:sum] %></td>
    </tr>
    <tr>
      <td><%= t('statistics.variance') %></td>
      <td><%= stats[:variance] %></td>
    </tr>
    <tr>
      <td><%= t('statistics.standard_deviation') %></td>
      <td><%= stats[:standard_deviation] %></td>
    </tr>
    <tr>
      <td><%= t('statistics.mean') %></td>
      <td><%= stats[:mean] %></td>
    </tr>
    <tr>
      <td><%= t('statistics.mode') %></td>
      <td><%= stats[:mode] %></td>
    </tr>
    <tr>
      <td><%= t('statistics.median') %></td>
      <td><%= stats[:median] %></td>
    </tr>
    <tr>
      <td><%= t('statistics.min_value') %></td>
      <td><%= stats[:min] %></td>
    </tr>
    <tr>
      <td><%= t('statistics.max_value') %></td>
      <td><%= stats[:max] %></td>
    </tr>
    <tr>
      <td><%= t('statistics.range') %></td>
      <td><%= stats[:range] %></td>
    </tr>
    <tr>
      <td>Q1</td>
      <td><%= stats[:q1] %></td>
    </tr>
    <tr>
      <td>Q2</td>
      <td><%= stats[:q2] %></td>
    </tr>
    <tr>
      <td>Q3</td>
      <td><%= stats[:q3] %></td>
    </tr>
  </tbody>
</table>

<h2 class="stat-analysis"><%= t('statistics.data_entries') %></h2>
<table class="entries">
  <thead>
    <th><%= t('statistics.time_period') %></th>
    <th><%= t('statistics.value') %></th>
  </thead>
  <tbody>
    <% data.each do |key, value| %>
      <tr>
        <td><%= key %></td>
        <td><%= value %></td>
      </tr>
    <% end %>
  </tbody>
</table>
